- @request_training ||= StaticPageEmail::RequestTraining.new
= simple_form_for @request_training, as: :request_training, method: :post, url: request_training_static_page_path(@static_page.key), html: {class: 'form-horizontal'}, wrapper: :horizontal_form  do |f|
  = f.input :name, label: 'Your name'
  = f.input :email, label: 'Your email address', as: :email
  = f.input :department, label: 'Your department'
  = f.input :date, label: 'Suggested date', input_html: {class: 'datepicker', value: Date.today}
  = f.input :trainees, label: 'List of trainees', as: :text
  = f.input :notes, label: 'Notes', as: :text, required: false
  =# f.button :submit, class: 'btn btn-primary', value: 'Send'
  = submit_button(f, value: 'Send')