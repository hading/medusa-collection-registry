= simple_form_for @file_format_profile, html: {class: 'form-horizontal', id: 'file_format_profile_form'}, wrapper: :horizontal_form do |f|
  .row
    = render partial: 'shared/form_sidebar', locals: {f: f, object: @file_format_profile, cancel_return: (file_format_profiles_path if @file_format_profile.new_record?)}
    .col-sm-9
      = f.input :name
      = f.input :status, as: :select, include_blank: false, collection: FileFormatProfile::STATUSES
      = f.input :software
      = f.input :software_version
      = f.input :os_environment, label: 'OS environment'
      = f.input :os_version, label: 'OS version'
      = f.input :notes
      = render layout: 'shared/layout_modal_edit', locals: {id: 'edit_file_formats_list', title: 'Select File Formats'} do
        = f.association :file_formats, as: :check_boxes, label_method: :name, label: ''
      = render layout: 'shared/layout_modal_edit', locals: {id: 'edit_content_type_list', title: 'Select Content Types'} do
        = f.association :content_types, as: :check_boxes, label_method: :name, label: ''
      = render layout: 'shared/layout_modal_edit', locals: {id: 'edit_file_extension_list', title: 'Select File Extensions'} do
        =# f.association :logical_extensions, as: :check_boxes, label_method: :label, label: ''
        %p
          Enter as a comma separated list with each item either an extension or an extension followed by a short description,
          for example "pl", "pl (Perl)", "pl (Prolog)". You may also click on an existing logical extension to add it.
        = f.input :logical_extensions_string, label: 'Logical extensions', class: 'logical-extensions-string'
        = render partial: 'logical_extensions/column_index'
