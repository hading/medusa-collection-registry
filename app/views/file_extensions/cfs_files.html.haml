.row.vertical-align
  .col-md-4
    = render 'layouts/page_header' do
      File Extensions
  .col-md-8
    .btn-toolbar.pull-right
      - download_path = download_batch_file_extension_path(@file_extension, page: params[:page], per_page: params[:per_page], repository_id: params[:repository_id], virtual_repository_id: params[:virtual_repository_id],  collection_id: params[:collection_id])
      - random_path = random_cfs_file_file_extension_path(@file_extension, repository_id: params[:repository_id], virtual_repository_id: params[:virtual_repository_id],  collection_id: params[:collection_id])
      = icon_default_button('Download', 'download', download_path, method: :post, remote: true)
      = icon_default_button('Random File', 'random', random_path)
.row
  = render 'cfs_files/table'
  = will_paginate @cfs_files, renderer: BootstrapPagination::Rails, params: {repository_id: @repository_id, virtual_repository_id: @virtual_repository_id, collection_id: @collection_id}