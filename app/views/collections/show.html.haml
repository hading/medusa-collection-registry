%h2 #{@collection.title}
%div Repository: #{link_to @collection.repository.title, repository_path(@collection.repository)}
%div
  #{link_to 'Edit', edit_collection_path(@collection)} |
  #{link_to 'Delete', collection_path(@collection), :method => :delete, :data => {:confirm => 'This is irreversible. Are you sure?'}}
%div
  %div Start Date: #{@collection.start_date}
  %div End Date: #{@collection.end_date}
  %div Description:
  %div #{@collection.description}
  %div Access URL: #{@collection.access_url}
  %div File Package Summary:
  %div #{@collection.file_package_summary}
  %div Rights Statement:
  %div #{@collection.rights_statement}
  %div Rights Restrictions:
  %div #{@collection.rights_restrictions}
  %div Notes:
  %div #{@collection.notes}

  %h2 Assessments
  %div #{link_to 'Add Assessment', new_assessment_path(:collection_id => @collection.id)}
  %div
    %table#assessments
      %tr
        %th Date
        %th
      - @collection.assessments.each do |assessment|
        %tr
          %td #{link_to assessment.date.to_s, assessment_path(assessment)}
          %td
            #{link_to 'Edit', edit_assessment_path(assessment)} |
            #{link_to 'Delete', assessment_path(assessment), :method => :delete, :data => {:confirm => 'This is irreversible - are you sure?'} }


