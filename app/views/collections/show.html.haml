- model_class = Collection

.page-header
  %p.lead Repository: #{link_to @collection.repository.title, @collection.repository}
  %h1
    = @collection.title
    %small Collection

.span3#sidebar
  .well
    %p
      %strong Start Date:
      %br
      = @collection.start_date
    %p
      %strong End Date:
      %br
      = @collection.end_date
    %p
      %strong Contact Person NetID:
      %br
      = net_id_search_link(@collection.contact_net_id)
    %p
      %strong Access Systems:
      %br
      - if access_systems = @collection.access_systems
        %ul#access_systems
          - access_systems.each do |access_system|
            %li #{link_to access_system.name, access_system}
    %p
      %strong Content Type:
      %br
      = @collection.content_type.try(:name)
    %p
      %strong Object Types:
      %br
      = @collection.object_types.collect(&:name).join(", ")
    %p
      %strong Preservation Priority:
      %br
      = @collection.preservation_priority.try(:name)
    %p
      %strong Total Size (GB):
      = @collection.total_size
    %p
      %strong Description:
      %br
      = @collection.description
    %p
      %strong Access URL:
      %br
      = @collection.access_url
    %p
      %strong File Package Summary:
      %br
      = @collection.file_package_summary
    %p
      %strong Rights Statement:
      %br
      = @collection.rights_statement
    %p
      %strong Rights Restrictions:
      %br
      = @collection.rights_restrictions
    %p
      %strong Notes:
      %br
      = @collection.notes

    .btn-group
      = link_to "Back", repository_path(@collection.repository), :class => 'btn'
      = link_to "Edit", edit_collection_path(@collection), :class => 'btn'
      = link_to "Delete Collection", collection_path(@collection), :method => "delete", :data => { :confirm => 'This is irreversible - are you sure?'}, :class => 'btn btn-danger'
  %hr
  .well
    = render 'show_ingest_status'

.span9#content
  %a.toggles{:href=>"#", :rel => "tooltip", :title => "Hide or show the sidebar" }
    %i.icon-arrow-left

  = render 'assessments_table'

  %hr/

  = render 'file_groups_table'

