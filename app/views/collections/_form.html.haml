= simple_form_for @collection do |f|
  = f.input :title
  = f.input :start_date
  = f.input :end_date
  = f.association :access_systems, :collection => access_system_select_collection, :html => {:multiple => true}
  = f.input :content_type_id, :collection => content_type_select_collection
  = f.input :description
  = f.input :access_url
  = f.input :file_package_summary
  = f.input :rights_statement
  = f.input :rights_restrictions
  = f.input :notes
  = f.input :repository_id, :as => :hidden, :input_html => {:value => @repository.id}
  = f.button :submit
  - if @collection.new_record?
    = link_to("Back to #{@repository.title}", @repository)
  - else
    = button_to('Cancel', @collection)
