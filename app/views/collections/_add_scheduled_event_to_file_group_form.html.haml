-# Must pass in file_group
.modal.hide.fade{:id => "add-scheduled-event-file-group-#{file_group.id}"}
  = simple_form_for ScheduledEvent.new, :url => new_scheduled_event_file_group_path(file_group),:html => {:class => 'form-search scheduled-event-form'}, :remote => true do |f|
    .modal-header
      %button{:type => "button", :class => "close", 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
        Ã—
      %h3#modalLabel New Event
    .modal-body
      = f.input :key, :as => :select, :include_blank => false, :collection => file_group.scheduled_event_select_options, :label => 'Scheduled event'
      = f.input :actor_netid, :label => 'Actor', :input_html => {:value => current_user.try(:uid)}, :as => :autocomplete, :url => autocomplete_user_uid_events_path
      = f.input :action_date, :as => :string, :input_html => {:class => 'datepicker', :value => Date.today.to_s}
      = f.input :note, :input_html => {:class => 'span5'}
    .modal-footer
      %button{:class => 'btn', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'} Cancel
      = f.button :submit, :class => 'btn-primary'
