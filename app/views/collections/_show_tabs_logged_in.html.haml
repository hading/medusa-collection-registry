= render :partial => 'shared/tab_header', :locals => {:id => 'tab-headers', :tabs => ['about', 'file-manager', 'assessments','attachments'], :active_index => 1}
.tab-content
  #about.tab-pane
    = render 'show_about_tab'
  #file-manager.tab-pane.active
    %p #{@collection.file_package_summary_html}
    %p #{link_to "Bit root directory", directory_path(@collection.root_directory)}
    = render 'file_groups_table'
  #assessments.tab-pane
    = render 'assessments/table'
  #attachments.tab-pane
    = render 'attachments_table' if logged_in?