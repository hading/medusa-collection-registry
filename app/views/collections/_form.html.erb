<%= simple_form_for(@collection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :repository_id %>
    <%= f.input :title %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :published %>
    <%= f.input :ongoing %>
    <%= f.input :description %>
    <%= f.input :access_url %>
    <%= f.input :file_package_summary %>
    <%= f.input :rights_statement %>
    <%= f.input :rights_restrictions %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
