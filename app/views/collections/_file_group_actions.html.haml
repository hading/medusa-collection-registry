%td.dropdown
  %a.btn.btn-default.btn-xs.dropdown-toggle{type: 'button', 'data-toggle' => 'dropdown', 'aria-expanded' => false, href: '#'}
    Actions
    %span.caret
  %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
    %li.dropdown-header{role: 'presentation'} Events
    %li.event-action{role: 'presentation'}= link_to 'View', events_file_group_path(file_group)
    %li.event-action{role: 'presentation'}= link_to 'Add', "#add-event-file-group-#{file_group.id}", 'data-toggle' => 'modal'
    %li.divider
    %li.assessment-action.dropdown-header{role: 'presentation'} Assessments
    %li.assessment-action{role: 'presentation'}= link_to 'View', assessments_file_group_path(file_group)
    %li.assessment-action{role: 'presentation'}= link_to 'Add', new_assessment_path(assessable_id: file_group.id, assessable_type: file_group.class.name)
    %li.divider
    %li.dropdown-header{role: 'presentation'} Related File Groups
    %li.related-file-group-action{role: 'presentation'}= link_to 'Add', edit_polymorphic_path(file_group, active_tab: '#related-file-groups')
    %li.divider
    - if file_group.is_a?(BitLevelFileGroup)
      %li.dropdown-header{role: 'presentation'} FITS
      %li.fits-action{role: 'presentation'}= link_to 'Run', create_cfs_fits_bit_level_file_group_path(file_group), remote: 'true', method: :post
