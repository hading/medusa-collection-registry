%h2 File Groups

= link_to 'Add File Group', new_file_group_path(:collection_id => @collection.id), :class => 'btn btn-primary btn-mini'

- if @collection.file_groups.present?
  %table#file_groups.table.table-striped
    %thead
      %tr
        %th Id
        %th Name
        %th Producer
        %th File type
        %th External file location
        %th File format
        %th Total file size (GB)
        %th Total files
        %th
    %tbody
      - @collection.file_groups.each do |file_group|
        %tr
          %td #{file_group.id}
          %td #{link_to file_group.name, file_group}
          %td #{link_to(file_group.producer.title, file_group.producer) if file_group.producer}
          %td #{file_group.file_type_name}
          %td #{file_group.external_file_location}
          %td #{file_group.file_format}
          %td #{file_group.total_file_size}
          %td #{file_group.total_files}
          %td
            = link_to 'View', file_group, :class => 'btn btn-mini'
            = link_to 'Edit', edit_file_group_path(file_group), :class => 'btn btn-mini'
            = link_to 'Delete', file_group, :method => :delete, :data => {:confirm => generic_confirm_message}, :class => 'btn btn-mini btn-danger'

