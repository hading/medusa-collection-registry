%p= link_to('New Production Unit', new_production_unit_path)
%table#production_units
  %tr
    %th Title
    %th URL
    %th Notes
    %th
  - @production_units.each do |production_unit|
    %tr
      %td #{link_to production_unit.title, production_unit_path(production_unit)}
      %td #{link_to production_unit.url, production_unit.url}
      %td #{production_unit.notes}
      %td
        #{link_to 'Edit', edit_production_unit_path(production_unit)} |
        #{link_to 'Delete', production_unit_path(production_unit), :method => :delete, :data => {:confirm => 'This is irreversible - are you sure?'}}