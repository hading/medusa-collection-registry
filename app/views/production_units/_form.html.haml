= simple_form_for @production_unit, :html => {:class => 'form-horizontal'} do |f|
  = f.input :title
  = f.input :administrator_net_id, :label => 'Adminstrator Net ID'
  = f.input :address_1
  = f.input :address_2
  = f.input :city
  = f.input :state
  = f.input :zip
  = f.input :phone_number
  = f.input :email
  = f.input :url, :label => 'URL'
  = f.input :notes
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    - if @production_unit.new_record?
      = link_to('Index', production_units_path, :class => 'btn')
    - else
      = link_to(t('.cancel', :default => t('helpers.links.cancel')), @production_unit, :class => 'btn')