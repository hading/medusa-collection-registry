= link_to 'View events', events_file_group_path(@file_group), :class => 'btn btn-default'
= link_to  'Schedule Event', '#addScheduledEventModal', :role => 'button', 'data-toggle' => 'modal', :class => 'btn btn-default'
= link_to('Add Event', '#addEventModal', :role => 'button', 'data-toggle' => 'modal', :class => 'btn btn-default')
= link_to('Red Flags', red_flags_file_group_path(@file_group), :class => 'btn btn-default') if @file_group.respond_to?(:all_red_flags)
= link_to 'Create All FITS XML', create_all_fits_file_group_path(@file_group), :method => 'post', :class => 'btn btn-default'
- if @file_group.is_a?(ExternalFileGroup) and @file_group.ready_for_bit_level_ingest? and safe_can?(:ingest, @file_group)
  = link_to 'Approve for ingest', ingest_external_file_group_path(@file_group), method: :post, :class => 'btn btn-default', :data => {:confirm => 'Are you sure?'}
= link_to 'Edit', edit_polymorphic_path(@file_group), :class => 'btn btn-default'
= link_to 'Delete', @file_group, :method => :delete, :data => {:confirm => generic_confirm_message}, :class => 'btn btn-danger'
