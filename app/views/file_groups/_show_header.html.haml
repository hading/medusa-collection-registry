%h1 File Group
%p.lead Collection: #{link_to @collection.title, @collection}
- if @file_group.cfs_directory
  %p
    CFS Root: #{link_to @file_group.cfs_directory.path, cfs_directory_path(@file_group.cfs_directory)}
    = link_to 'Create FITS for CFS tree', create_cfs_fits_file_group_path(@file_group), :method => 'post', :class => 'btn btn-default'
    - if @file_group.is_a?(BitLevelFileGroup) and @file_group.is_currently_assessable?
      = link_to 'Run Simple Assessment', create_initial_cfs_assessment_bit_level_file_group_path(@file_group), method: :post, :class => 'btn btn-default'
- if @file_group.is_a?(ExternalFileGroup) and @file_group.ready_for_bit_level_ingest? and safe_can?(:ingest, @file_group)
  = link_to 'Approve for ingest', ingest_external_file_group_path(@file_group), method: :post, :class => 'btn btn-default'