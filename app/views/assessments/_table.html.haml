%h2
  Assessments
  = link_to 'Add Assessment', new_assessment_path(assessable_id: @assessable.id, assessable_type: @assessable.class.name), class: 'btn btn-primary btn-xs pull-right'

- if @assessments.present?
  %table#assessments.table.table-striped
    %thead
      %tr
        %th Name
        %th For
        %th Type
        %th Date
        %th Author
        %th
    %tbody
      - @assessments.each do |assessment|
        - cache([assessment, assessment.assessable]) do
          %tr
            %td #{link_to assessment.name, assessment}
            %td #{link_to assessment.assessable.label, assessment.assessable}
            %td #{assessment.assessable.class.to_s.underscore.humanize}
            %td #{assessment.date}
            %td #{assessment.author_email}
            %td
              = link_to 'View', assessment, class: 'btn btn-default btn-xs'
              = link_to 'Edit', edit_assessment_path(assessment), class: 'btn btn-default btn-xs'
