.pull-right
  = link_to 'Edit', edit_assessment_path(@assessment), :class => 'btn'
  = link_to 'Delete', @assessment, :method => :delete, :data => {:confirm => 'This is irreversible. Are you sure?'}, :class => 'btn btn-danger'

.page-header
  %h1 Assessment: #{@assessment.date}
  %p.lead Collection: #{link_to @collection.title, @collection}

.row
  .span8
    = show_value net_id_search_link(@assessment.author_net_id), 'Author Net ID'
    = show_field @assessment, :preservation_risks
    = show_field @assessment, :notes
