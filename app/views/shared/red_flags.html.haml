%strong #{@aggregator.class.to_s.underscore.humanize}:
= link_to @aggregator.red_flag_aggregator_label, self.send(@aggregator.red_flag_aggregator_path_method, @aggregator)

%table#red-flags.table.table-striped
  %thead
    %tr
      %th Type
      %th Label
      %th Time
      %th Message
  %tbody
    - @red_flags.each do |red_flag|
      %tr
        %td= red_flag.red_flaggable.class.cfs_type
        %td= red_flag.red_flaggable.cfs_label
        %td= red_flag.created_at
        %td= red_flag.message
