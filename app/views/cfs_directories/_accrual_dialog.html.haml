= render layout: 'layouts/bootstrap_modal', locals: {id: 'add-files-dialog'} do
  .modal-header
    %h4 Add files
  .modal-body
    = simple_form_for :accrual, url: submit_accruals_path, html: {id: 'add-files-form'} do |f|
      .btn-toolbar
        .btn-group
          = link_to 'Up', @accrual.parent_display_path, class: 'btn btn-default', id: 'add-files-up-link', remote: true
          = link_to 'Toggle Directories', '#', onclick: 'toggle_accrual_directories();', class: 'btn btn-default'
          = link_to 'Toggle Files', '#', onclick: 'toggle_accrual_files();', class: 'btn btn-default'
        .btn-group
          = submit_button(f, value: 'Ingest')
          = cancel_modal_button
      = f.input :cfs_directory_id, as: :hidden
      = f.input :staging_path, as: :hidden
      = f.input :allow_overwrite, as: :boolean
      #add-files-listing
        = render 'cfs_directories/accrual_listing'
      .btn-group
        = submit_button(f, value: 'Ingest')
        = cancel_modal_button
