.row
  .col-sm-6
    %h3
      - now = Time.now.strftime('%m/%d/%Y, %I:%M:%S%P %Z')
      File Statistics (as of #{now})
  .col-sm-6
    .pull-right
      = link_to 'CSV', file_stats_dashboard_path(format: :csv), class: 'btn btn-default'
.row
  .col-sm-6
    - cache(cache_key_for_all(ContentType)) do
      - headers = ['File Format', 'Number of Files', 'Tested', 'Size']
      = render layout: 'layouts/standard_table', locals: {id: :file_stats_content_type, classes: %w(table-bordered table-condensed), headers: headers} do
        - @content_type_hashes.each do |info|
          %tr
            %td= link_to info['name'], cfs_files_content_type_path(info['content_type_id'])
            %td= info['file_count'].to_i.to_formatted_s(:delimited)
            - percent = info['tested_count'].to_d / info['file_count'].to_d * 100
            %td= "#{info['tested_count'].to_i.to_formatted_s(:delimited)}&nbsp;(#{percent.to_formatted_s(:percentage, precision: 3)})".html_safe
            %td{'data-order' => info['file_size'].to_d}= info['file_size'].to_d.to_formatted_s(:human_size, precision: 3).sub(' ', '&nbsp;').html_safe

  .col-sm-6
    - cache(cache_key_for_all(FileExtension)) do
      - headers = ['File Extension', 'Number of Files', 'Tested', 'Size']
      = render layout: 'layouts/standard_table', locals: {id: :file_stats_file_extension, classes: %w(table-bordered table-condensed), headers: headers} do
        - @file_extension_hashes.each do |info|
          %tr
            %td= link_to info['extension'].if_blank('<no extension>'), cfs_files_file_extension_path(info['file_extension_id'])
            %td= info['file_count'].to_i.to_formatted_s(:delimited)
            - percent = info['tested_count'].to_d / info['file_count'].to_d * 100
            %td= "#{info['tested_count'].to_i.to_formatted_s(:delimited)}&nbsp;(#{percent.to_formatted_s(:percentage, precision: 3)})".html_safe
            %td{'data-order' => info['file_size'].to_d}= info['file_size'].to_d.to_formatted_s(:human_size, precision: 3).sub(' ', '&nbsp;').html_safe
