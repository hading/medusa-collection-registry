%table.table.table-striped#items
  %thead
    %tr
      %th Barcode
      %th Title
      %th Notes
      %th Batch
      %th Call Number
      %th Author
      %th Record Series Id
      %th
  %tbody
    - @items.each do |item|
      - cache(item) do
        %tr
          %td= link_to(item.barcode, item_path(item))
          %td= [item.title,item.item_title,item.local_title].detect {|title| title.present?}
          %td= item.notes
          %td= link_to(item.batch, project_path(@project, batch: item.batch))
          %td= item.call_number
          %td= item.author
          %td= item.record_series_id
          %td
            = small_edit_button(item)
            = small_clone_button(new_item_path(source_id: item.id), method: :get)