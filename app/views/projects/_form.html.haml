= simple_form_for @project, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
  .row
    = render 'shared/form_sidebar', f: f, object: @project, cancel_return: (projects_path if @project.new_record?)
    .col-sm-9
      = render 'form_metadata', f: f
    = render 'form_directory_picker'
