%h2
  Collections
  %span.pull-right
    = small_add_button(new_collection_path(repository_id: @repository.id), title: 'Add Collection')
    = link_to collections_repository_path(@repository, format: 'csv'), class: 'btn btn-default btn-xs' do
      %span.glyphicon.glyphicon-export
      Export as CSV

%div
  %table.table.table-striped#collections
    %thead
      %tr
        %th External ID
        %th Title
        %th Contact
        %th Size (GB)
        %th Preservation Priority
        %th
    %tbody
      - @repository.collections.each do |collection|
        - cache(collection) do
          %tr
            %td #{collection.external_id}
            %td #{link_to collection.title, collection}
            %td #{collection.contact_email}
            %td #{collection.total_size.to_s(:rounded, precision: 2, delimiter: ',')}
            %td #{collection.preservation_priority_name}
            %td
              = small_edit_button(collection)
