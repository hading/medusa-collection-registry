%h2
  Collections
  = link_to 'Add Collection', new_collection_path(:repository_id => @repository.id), :class => 'btn btn-primary btn-mini pull-right'

%div
  %table.table.table-striped#collections
    %thead
      %tr
        %th External ID
        %th Title
        %th Contact
        %th Size (GB)
        %th Preservation Priority
        %th
    %tbody
      - @repository.collections.each do |collection|
        %tr
          %td #{collection.external_id}
          %td #{link_to collection.title, collection}
          %td #{net_id_search_link(collection.contact_net_id)}
          %td #{collection.total_size.to_s(:rounded, precision: 2, delimiter: ',')}
          %td #{collection.preservation_priority_name}
          %td
            = link_to 'Edit', edit_collection_path(collection), :class => 'btn btn-mini'
            = link_to 'Delete', collection, :method => :delete, :data => { :confirm => collection_confirm_message}, :class => 'btn btn-mini btn-danger'
