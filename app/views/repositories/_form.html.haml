= simple_form_for @repository, :html => { :class => 'form-horizontal' } do |f|
  .row
    .col-sm-8
      = f.input :title, :input_html => {:class => 'col-sm-6' }
    .col-sm-4
      = f.input :contact_net_id, :label => 'Contact Person Net ID'
      = f.input :address_1
      = f.input :address_2
      = f.input :city
      = f.input :state
      = f.input :zip
    .col-sm-4
      = f.input :phone_number, :label => 'Phone Number'
      = f.input :email
      = f.input :url, :label => 'URL'
      = f.input :active_start_date, :as => :string, :input_html => {:class => 'datepicker'}, :label => 'Active Start Date'
      = f.input :active_end_date, :as => :string, :input_html => {:class => 'datepicker'}, :label => 'Active End Date'
      = f.input :notes, :input_html => { :rows => 3, :class => 'col-sm-3' }
    .form-actions.col-sm-6
      = f.button :submit, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t('helpers.links.cancel')), repositories_path, :class => 'btn btn-default'
