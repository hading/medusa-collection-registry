%table.table.table-hover.table-bordered.table-condensed#storage-summary
  %caption Storage
  %thead
    %tr
      %th State
      %th Size (GB)
      %th Files
  %tbody
    %tr
      %td Bit Level
      %td.value= number_with_precision(@virtual_repository.total_size, precision: 2, delimiter: ',')
      %td.value= number_with_precision(@virtual_repository.total_files, precision: 0, delimiter: ',')

= render 'collections_table'
