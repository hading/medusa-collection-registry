- url = @note.new_record? ? create_note_file_format_path(@file_format) : update_note_file_format_path(@file_format)
= render layout: 'layouts/bootstrap_modal', locals: {id: 'modal_item_form'} do
  = simple_form_for @note, url: url, remote: true, html: {class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
    .row
      = render partial: 'form_sidebar', locals: {f: f, object: @note}
      .col-sm-10
        = f.input :note