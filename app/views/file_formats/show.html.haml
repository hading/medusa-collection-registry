= render layout: 'layout_single' do

  .row
    .col-xs-12
      .well
        = show_field @file_format, :name
        = show_value @file_format.pronom_link, "Pronom ID"
        = show_field @file_format, :policy_summary
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 File format profiles:
        - if @file_format.file_format_profiles.present?
          %ul.list-group
            - @file_format.file_format_profiles.each do |file_format_profile|
              %li.list-group-item= link_to(file_format_profile.name, file_format_profile)
        - else
          .panel-body None
  .row
    .col-xs-12
      #file_format_notes.panel.panel-default
        .panel-heading
          .pull-right
            = link_to "Add Note", new_note_file_format_path(@file_format), class: 'btn btn-xs btn-default', remote: true
          %h4 Notes
        .panel-body
          - @file_format.file_format_notes.each do |note|
            = render partial: 'file_format_note', locals: {note: note}
  .row
    .col-xs-12
      #file_format_normalization_paths.panel.panel-default
        .panel-heading
          .pull-right
            = link_to "Add Normalization Path", new_normalization_path_file_format_path(@file_format), class: 'btn btn-xs btn-default', remote: true
          %h4 Normalization Paths
        .panel-body
          - @file_format.file_format_normalization_paths.each do |path|
            = render partial: 'file_format_normalization_path', locals: {path: path}

  #form_placeholder
