= render 'show_breadcrumbs'

%h3 File: #{@file.name}
- if @file_group
  %h4 File Group: #{link_to @file_group.name, @file_group}

.row
  .span12
    = show_value @file.name, 'File name'
    = show_value 'bit-level', 'Storage level'
    = show_value @file.md5_sum, 'MD5'
    - if @file.size
      = show_value @filegit .size.to_formatted_s(:human_size, precision: 3), 'File size'
    = show_value @file.content_type, 'Mimetype'
