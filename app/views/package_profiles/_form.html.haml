= simple_form_for @package_profile, :html => {:class => 'form-horizontal'} do |f|
  = f.input :name
  = f.input :url
  = f.input :notes
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    - if @package_profile.new_record?
      = link_to 'Index', package_profiles_path, :class => 'btn btn-default'
    - else
      = link_to t('.cancel', :default => t('helpers.links.cancel')), @package_profile, :class => 'btn btn-default'