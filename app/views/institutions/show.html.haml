- cache(@institution) do
  .btn-group.pull-right
    = link_to 'Create Repository', new_repository_path(institution_id: @institution.id), class: 'btn btn-primary'
    = edit_button(@institution)

  %h1.text_center= @institution.name

  %br

  #about
    .well
      = show_field @institution, :name

  %h2 Repositories

  = render 'repositories/table'