%h1 Events for #{@eventable.class.to_s.humanize}: #{@eventable.label}

%table#events.table.table-striped
  %thead
    %tr
      %td Time
      %td User
      %td Message
      %td Note
  %tbody
    - @events.each do |event|
      %tr
        %td= event.date
        %td= event.actor_netid
        %td= event.message
        %td= event.note