.pull-right
  = link_to 'Edit', edit_red_flag_path(@red_flag), :class => 'btn'

.page_header
  %h2
    Red Flag for #{@red_flag.red_flaggable.class.to_s.underscore.humanize}:
    = link_to @red_flag.red_flaggable.label, @red_flag.red_flaggable

.row
  .span8
    .well
      = show_field @red_flag, :message
      = show_field @red_flag, :priority
      = show_field @red_flag, :status
      = show_field @red_flag, :notes
      = show_field @red_flag, :created_at
      = show_field @red_flag, :updated_at